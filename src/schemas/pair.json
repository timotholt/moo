{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid"
        },
        "actor_id": {
            "type": "string",
            "format": "uuid"
        },
        "dialogue_id": {
            "type": "string",
            "format": "uuid"
        },
        "state": {
            "type": "string",
            "enum": [
                "Planned",
                "Recording",
                "Review",
                "OnHold",
                "Done"
            ]
        },
        "complete": {
            "type": "boolean"
        },
        "notes": {
            "type": "string"
        },
        "approved_take_ids": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "uuid"
            },
            "uniqueItems": true
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        },
        "updated_at": {
            "type": "string",
            "format": "date-time"
        }
    },
    "required": [
        "id",
        "actor_id",
        "dialogue_id",
        "state",
        "complete",
        "approved_take_ids",
        "created_at",
        "updated_at"
    ],
    "additionalProperties": false
}