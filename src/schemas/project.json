{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid"
        },
        "name": {
            "type": "string"
        },
        "schema_version": {
            "type": "string",
            "const": "1.0.0"
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        },
        "updated_at": {
            "type": "string",
            "format": "date-time"
        },
        "settings": {
            "type": "object",
            "properties": {
                "media_root": {
                    "type": "string"
                },
                "sample_rate": {
                    "type": "integer",
                    "enum": [
                        44100,
                        48000
                    ]
                },
                "bit_depth": {
                    "type": "integer",
                    "enum": [
                        16,
                        24
                    ]
                },
                "channels": {
                    "type": "integer",
                    "enum": [
                        1,
                        2
                    ]
                },
                "lufs_target": {
                    "type": "number"
                },
                "peak_ceiling_db": {
                    "type": "number",
                    "default": -1.0
                },
                "lra_max": {
                    "type": "number",
                    "default": 12.0
                }
            },
            "required": [
                "media_root",
                "sample_rate",
                "bit_depth",
                "channels",
                "lufs_target"
            ]
        }
    },
    "required": [
        "id",
        "name",
        "schema_version",
        "created_at",
        "updated_at",
        "settings"
    ],
    "additionalProperties": false
}