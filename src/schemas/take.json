{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid"
        },
        "pair_id": {
            "type": "string",
            "format": "uuid"
        },
        "path": {
            "type": "string"
        },
        "hash_sha256": {
            "type": "string"
        },
        "duration_sec": {
            "type": "number"
        },
        "format": {
            "type": "string",
            "enum": [
                "wav",
                "flac",
                "aiff"
            ]
        },
        "sample_rate": {
            "type": "integer",
            "enum": [
                44100,
                48000
            ]
        },
        "bit_depth": {
            "type": "integer",
            "enum": [
                16,
                24
            ]
        },
        "channels": {
            "type": "integer",
            "enum": [
                1,
                2
            ]
        },
        "lufs_integrated": {
            "type": "number"
        },
        "peak_dbfs": {
            "type": "number"
        },
        "transform_chain": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "job_id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "name": {
                        "type": "string"
                    },
                    "params": {
                        "type": "object"
                    }
                },
                "required": [
                    "job_id",
                    "name",
                    "params"
                ]
            }
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        },
        "updated_at": {
            "type": "string",
            "format": "date-time"
        }
    },
    "required": [
        "id",
        "pair_id",
        "path",
        "hash_sha256",
        "duration_sec",
        "format",
        "sample_rate",
        "bit_depth",
        "channels",
        "created_at",
        "updated_at"
    ],
    "additionalProperties": false
}