{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid"
        },
        "content_id": {
            "type": "string",
            "format": "uuid"
        },
        "take_number": {
            "type": "integer",
            "minimum": 1
        },
        "filename": {
            "type": "string"
        },
        "status": {
            "type": "string",
            "enum": [
                "new",
                "approved",
                "rejected",
                "hidden"
            ]
        },
        "path": {
            "type": "string"
        },
        "hash_sha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
        },
        "duration_sec": {
            "type": "number",
            "minimum": 0
        },
        "format": {
            "type": "string",
            "enum": [
                "wav",
                "flac",
                "aiff",
                "mp3"
            ]
        },
        "sample_rate": {
            "type": "integer",
            "enum": [
                44100,
                48000
            ]
        },
        "bit_depth": {
            "type": "integer",
            "enum": [
                16,
                24
            ]
        },
        "channels": {
            "type": "integer",
            "enum": [
                1,
                2
            ]
        },
        "lufs_integrated": {
            "type": "number"
        },
        "peak_dbfs": {
            "type": "number"
        },
        "generated_by": {
            "type": [
                "string",
                "null"
            ],
            "enum": [
                "elevenlabs",
                "manual",
                null
            ]
        },
        "generation_params": {
            "type": "object"
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        },
        "updated_at": {
            "type": "string",
            "format": "date-time"
        }
    },
    "required": [
        "id",
        "content_id",
        "take_number",
        "filename",
        "status",
        "path",
        "created_at",
        "updated_at"
    ],
    "additionalProperties": false
}